<div class="chat-card">
  <div class="chat-card__header {{pickedCardClass}}">
    <i class="{{pickedIcon}}"></i> {{label}}
  </div>
  {{#if critHit}}
    <div class="chat-card__header chat-card__header--critical-hit">{{localize "EVENTIDE_RP_SYSTEM.Messages.Sections.CriticalHit"}}</div>
  {{/if}}
  {{#if critMiss}}
    <div class="chat-card__header chat-card__header--critical-miss">{{localize "EVENTIDE_RP_SYSTEM.Messages.Sections.CriticaMiss"}}</div>
  {{/if}}
  {{#if stolenCrit}}
    <div class="chat-card__header chat-card__header--stolen-crit">{{localize "EVENTIDE_RP_SYSTEM.Messages.Sections.StolenCrit"}}</div>
  {{/if}}
  {{#if savedMiss}}
    <div class="chat-card__header chat-card__header--saved-miss">{{localize "EVENTIDE_RP_SYSTEM.Messages.Sections.SavedMiss"}}</div>
  {{/if}}
  {{#if acCheck}}
    <div class="chat-card__effects chat-card__effects--ac-check">
      <div class="chat-card__effects--title">AC Check</div>
      {{#each targetRollData as |target|}}
          <div class="chat-card__effects--name flexrow"> {{this.name}}:
            {{#each this.abilities as |ability key|}}
              {{#ifCond target.compare ">=" ability.ac}}
                <div class="chat-card__effects--hit flex-group-center">
              {{/ifCond}}
              {{#ifCond target.compare "<" ability.ac}}
                <div class="chat-card__effects--miss flex-group-center">
              {{/ifCond}}
              {{ability.abbr}}
               </div>
            {{/each}}
          </div>
      {{/each}}
    </div>
  {{/if}}
  {{#if description}}
    <div class="chat-card__description">
      <div class="chat-card__description--header">{{actor.name}}. . . </div>
      {{{description}}} 
    </div>
  {{/if}}
</div>