<div class="{{cssClass}} standard-form" autocomplete="off">
  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" placeholder="Name">
  </div>
  <div class="form-group">
    <label for="description">Description:</label>
    <textarea id="description" name="description" placeholder="Description"></textarea>
  </div>
  <div class="form-group">
    <label for="img">Image:</label>
    {{!-- <button type="button" id="file-picker" data-type="image" data-target="img" class="file-picker">Browse</button> --}}
    <file-picker data-action="imagePick" id="img" name="img" type="image" value="icons/svg/stoned.svg" create="{displayMode: "tiles"}"></file-picker>
  </div>
  <div class="form-group">
    <label for="bgColor">Background Color:</label>
    <input type="color" id="bgColor" name="bgColor" value="#7B4874">
  </div>
  <div class="form-group">
    <label for="textColor">Text Color:</label>
    <input type="color" id="textColor" name="textColor" value="#ffffff">
  </div>
  <p>Effects:</p>
  {{#each abilities}}
    <div class="form-group">
      <label for="{{this.toLowerCase}}"> {{this}}:</label>
      <input type="number" id="{{this.toLowerCase}}" name="{{this.toLowerCase}}" value="0">
      <select id="{{this.toLowerCase}}-mode" name="{{this.toLowerCase}}-mode">
        <option value="add">Add</option>
        <option value="override">Override</option>
      </select>
    </div>
  {{/each}}
  {{#each hiddenAbilities}}
    <div class="form-group">
      <label for="{{this.toLowerCase}}"> {{this}}:</label>
      <input type="number" id="{{this.toLowerCase}}" name="{{this.toLowerCase}}" value="0">
      <select id="{{this.toLowerCase}}-mode" name="{{this.toLowerCase}}-mode">
        <option value="add">Add</option>
        <option value="override">Override</option>
      </select>
    </div>
  {{/each}}
  <button type="submit">{{#if targetArray.length}}Create and Apply{{else}}Create{{/if}}</button>
  {{!-- <input type="text" id="img" name="img" placeholder="Image URL" value="icons/svg/item-bag.svg" style="display: none;" disabled> --}}
</div>
