<div class="{{cssClass}}" autocomplete="off">
  <div class="form-group">
    <label for="restoreResolve"><strong>Restore Resolve:</strong></label>
    <input autofocus type="checkbox" id="restoreResolve" name="restoreResolve" checked="{{defaultOptions.restoreResolve}}">
  </div>
  <div class="form-group">
    <label for="restorePower"><strong>Restore Power:</strong></label>
    <input type="checkbox" id="restorePower" name="restorePower" checked="{{defaultOptions.restorePower}}">
  </div>
  <hr />
  <div class="form-group">
    <label><strong>Remove Statuses:</strong></label>
  </div>
  <div class="form-group">
    <label for ="all"><u><strong>All</strong></u></label>
    <input type="checkbox" id="all" name="all">
  </div>
  {{#each statusEffects as |status|}}
    <div class="form-group">
      <label for="{{status.id}}">{{status.name}}</label>
      <input type="checkbox" name="{{status.id}}" id="{{status.id}}">
    </div>
  {{/each}}
  <div class="form-group">
    <button type="submit">Restore</button>
    <button type="button" data-action="close">Close</button>
  </div>
</div>
