<div class="{{cssClass}} base-form" autocomplete="off">
    <div class="base-form__header">{{localize "EVENTIDE_RP_SYSTEM.Forms.Sections.SelectAbilityRoll"}}:</div>
    <div class="base-form__group">
        <select class="base-form__select" autofocus name="attribute-choice">
            {{#each abilities}}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
        </select>
    </div>
    <div class="base-form__group base-form__group--right">
      <button type="submit" class="base-form__button base-form__button--primary">{{localize "EVENTIDE_RP_SYSTEM.Forms.Buttons.Roll"}}</button>
      <button type="button" class="base-form__button" data-action="close">{{localize "EVENTIDE_RP_SYSTEM.Forms.Buttons.Close"}}</button>
    </div>
</div>