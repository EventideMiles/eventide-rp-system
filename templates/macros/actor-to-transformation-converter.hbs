{{!-- Actor to Transformation Converter Form --}}
<div class="{{cssClass}} erps-form" autocomplete="off">
  {{> callout-box}}
  <div class="erps-form__content">
    <div class="erps-form__group">
      <label class="erps-form__label" for="actorSelect">{{localize "EVENTIDE_RP_SYSTEM.Forms.Labels.SelectActor"}}</label>
      <select
        class="erps-select"
        id="actorSelect"
        name="actorSelect"
      >
        <option value="">{{localize "EVENTIDE_RP_SYSTEM.Forms.Placeholders.SelectActor"}}</option>
        {{#each actors as |actor|}}
          <option value="{{actor.uuid}}">
            {{actor.name}} ({{actor.source}})
          </option>
        {{/each}}
      </select>
    </div>

    <div class="erps-form__group">
      <label class="erps-form__label" for="name">{{localize "EVENTIDE_RP_SYSTEM.Forms.Labels.TransformationName"}}</label>
      <input
        class="erps-input"
        type="text"
        id="name"
        name="name"
        placeholder="{{localize "EVENTIDE_RP_SYSTEM.Forms.Placeholders.TransformationName"}}"
      />
    </div>

    <div class="erps-form__group">
      <label class="erps-form__label" for="createIn">{{localize "EVENTIDE_RP_SYSTEM.Forms.Labels.CreateIn"}}</label>
      <select class="erps-select" id="createIn" name="createIn">
        {{#each createInOptions as |option|}}
          <option value="{{option.value}}" {{#if option.selected}}selected{{/if}}>
            {{option.label}}
          </option>
        {{/each}}
      </select>
    </div>

    <div class="erps-form__group">
      <label class="erps-form__label erps-form__label--optional" for="compendium">{{localize "EVENTIDE_RP_SYSTEM.Forms.Labels.CompendiumId"}}</label>
      <input
        class="erps-input"
        type="text"
        id="compendium"
        name="compendium"
        placeholder="{{localize "EVENTIDE_RP_SYSTEM.Forms.Placeholders.CompendiumId"}}"
      />
      <p class="erps-form__help-text">{{localize "EVENTIDE_RP_SYSTEM.Forms.HelpText.CompendiumId"}}</p>
    </div>
  </div>

  {{> macro-footer}}
</div>
