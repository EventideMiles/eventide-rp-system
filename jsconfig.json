{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ES2022", "DOM"],
    "module": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noImplicitAny": false,
    "checkJs": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "declaration": false,
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "types": [],
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "module/**/*",
    "macros/**/*",
    "*.mjs"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "tests",
    "coverage"
  ]
}